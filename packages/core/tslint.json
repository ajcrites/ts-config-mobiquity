{
  "extends": "tslint-config-airbnb",
  "rules": {
    "quotemark": [true, "single", "avoid-escape", "jsx-double"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type", "check-preblock"],
    "curly": true,
    "no-angle-bracket-type-assertion": true,
    "prefer-template": [true, "allow-single-concat"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "ter-arrow-parens": [true, "as-needed"],
    "no-console": [true, "log", "debug", "info", "time", "timeEnd", "trace"],
    "no-else-after-return": false,
    "align": [true, "parameters", "statements", "elements", "members"],
    "semicolon": [true, "ignore-interfaces", "ignore-bound-class-methods"],
    "no-default-export": true
  }
}

