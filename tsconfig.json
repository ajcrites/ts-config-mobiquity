{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "rootDir": "src",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es7"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
